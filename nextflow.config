manifest {
    mainScript = 'main.nf'
}

// default parameters
params {
    cores = '4'
    help = false
    chunks = '0'

    // folder structure
    output = 'results'
    blastdir = '01-Blast'

    // inputs
    fasta = ''
    db = ''
}

profiles {
  conda { 
      process {
          withLabel: blast { conda = 'envs/blast.yaml' }
      }  
  }
  docker {
      process {
          withLabel: blast { container = 'nanozoo/blast:2.9.0--cbbc56f' }
      }  
      docker.enabled = true 
  }
  singularity { singularity.enabled = true }
}

